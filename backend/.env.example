DB_PASS=${RAILWAY_MYSQL_PASSWORD}
DB_NAME=${RAILWAY_MYSQL_DATABASE}
DB_PORT=${RAILWAY_MYSQL_PORT}

# Configuration JWT
JWT_SECRET=votre_secret_jwt_tres_securise_ici
