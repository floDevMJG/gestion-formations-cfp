# Configuration de la base de données (Railway MySQL)
DB_HOST=${RAILWAY_MYSQL_HOST}
DB_USER=${RAILWAY_MYSQL_USER}
DB_PASS=${RAILWAY_MYSQL_PASSWORD}
DB_NAME=${RAILWAY_MYSQL_DATABASE}
DB_PORT=${RAILWAY_MYSQL_PORT}

# Configuration JWT
JWT_SECRET=votre_secret_jwt_tres_securise_ici
JWT_EXPIRES_IN=30d

# Configuration Email (SendGrid recommandé pour Railway)
SENDGRID_API_KEY=votre_cle_sendgrid
EMAIL_FROM=no-reply@votredomaine.com

# Configuration Google OAuth
GOOGLE_CLIENT_ID=votre_google_client_id_ici
GOOGLE_CLIENT_SECRET=votre_google_client_secret_ici
GOOGLE_CALLBACK_URL=https://cfp-backend-production.up.railway.app/api/auth/google/callback

# Configuration serveur
PORT=${PORT}
NODE_ENV=production

# URL du frontend (Netlify)
FRONTEND_URL=https://formations-cfp.netlify.app
